<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
<LinearLayout
    android:id="@+id/diyipai"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@mipmap/qq"/>
    <ImageView
        android:id="@+id/weibo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@mipmap/weibo"/>
    <ImageView
        android:id="@+id/pengyouquan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@mipmap/pengyouquan"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_below="@id/diyipai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@mipmap/wechat"/>
        <ImageView
            android:id="@+id/shoucuang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@mipmap/shoucang"/>
        <ImageView
            android:id="@+id/duanxinxi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:src="@mipmap/duanxin"/>
    </LinearLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="完成"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>
</RelativeLayout>